
<%= form_tag "/users", method: :post do %>

  <p>
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag :email %><br>
    <%= text_area_tag :email %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= text_area_tag :password %>
  </p>

  <p>
    <%= submit_tag "Register" %>
  </p>

<% end %>
