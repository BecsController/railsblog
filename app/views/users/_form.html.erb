
<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages' %>

     <%= f.label :name %><br />
     <%= f.text_field :name, class: 'control' %><br />

     <%= f.label :email %><br />
     <%= f.text_field :email, class: 'control' %><br />

     <%= f.label :password %><br />
     <%= f.password_field :password, class: 'control' %><br />

     <%= f.label :password_confirmation, "Confirmation" %><br />
     <%= f.password_field :password_confirmation, class: 'control' %><br />

     <%= f.submit "Sign Up", class: 'button' %></div>
 <% end %>
