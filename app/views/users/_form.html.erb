
<%= form_for(@user) do |f| %>
  <div class="column is-4 is-offset-4 has-text-centered">
    <div class="field">
      <div class="control">
        <%= f.text_field :name, placeholder: "Name", class: 'input is-medium' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.text_field :email, placeholder: "Email", class: 'input is-medium' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.password_field :password, placeholder: "Password", class: 'input is-medium' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.password_field :password_confirmation, placeholder: "Confirmation", class: 'input is-medium' %>
      </div>
    </div>

    <div>
      <%= f.submit "Sign Up", class: 'button is-info is-outlined is-medium' %>
    </div>
  </div>
<% end %>

<%= render 'shared/error_messages' %>
