<%= form_for(:session, url: login_path) do |f| %>
  <div class="column is-4 is-offset-4 has-text-centered">
    <div class="field">
      <div class="control">
       <%= f.text_field :email, placeholder: "Email", class: 'input is-medium' %>
     </div>
    </div>

    <div class="field">
      <div class="control">
       <%= f.password_field :password, placeholder: 'Password', class: 'input is-medium' %>
      </div>
     </div>

    <div class="actions"><%= submit_tag "Log In", class: 'button is-info is-outlined is-medium' %></div>
  </div>
<% end %>

<div class="error_messages has-text-danger has-text-centered is-size-5">
  <h2>The form contains <%= pluralize(@session.errors.count, "error") %>.</h2>
  <ul>
    <% @session.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
